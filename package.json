{
    "name": "mario-theme",
    "displayName": "Mario Theme",
    "description": "A modern dark theme with a balanced color palette for enhanced readability and reduced eye strain.",
    "version": "1.1.1",
    "publisher": "alphatr",
    "icon": "icon.png",
    "keywords": ["theme", "dark theme", "color theme", "icon theme"],
    "galleryBanner": {
        "color": "#282C34",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Themes"
    ],
    "scripts": {
        "build": "vsce package"
    },
    "contributes": {
        "themes": [
            {
                "label": "Mario Color Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/mario-color-theme.json"
            }
        ],
        "iconThemes": [
            {
                "id": "mario-icon-theme",
                "label": "Mario Icon Theme",
                "path": "./themes/mario-icon-theme.json"
            }
        ]
    },
    "devDependencies": {
        "vsce": "^2.9.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alphatr/vscode-mario-theme.git"
    },
    "license": "MIT"
}
